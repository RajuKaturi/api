{
  "name": "@sakuraapi/api",
  "version": "0.4.0",
  "description": "A NodeJS API Experiment",
  "main": "index.js",
  "typings": "index.d.ts",
  "files": [
    "**/!(*.spec).js",
    "**/!(*.spec).d.ts",
    "!spec/**/*",
    "!docs/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "doc:generate": "rm -rf docs && typedoc --options typedoc.json index.ts",
    "docker:compose-test": "docker-compose up -d --remove-orphans",
    "jasmine": "jasmine",
    "prepublish": "npm test",
    "test": "npm run docker:compose-test && npm run build && npm run jasmine && docker-compose down",
    "test:debug": "DEBUG=sapi:*,-sapi:*:verbose npm test",
    "test:verbose": "DEBUG=sapi:* npm test",
    "test:vverbose": "DEBUG=* npm test",
    "tsc": "tsc",
    "typedoc": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sakuraapi/api.git"
  },
  "keywords": [
    "REST",
    "JSON",
    "api",
    "server"
  ],
  "author": "Jean-Pierre E. Poveda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sakuraapi/api/issues"
  },
  "homepage": "https://github.com/sakuraapi/api#readme",
  "engines": {
    "node": ">=7.0.0"
  },
  "devDependencies": {
    "@types/colors": "^0.6.33",
    "@types/express": "^4.0.34",
    "@types/jasmine": "^2.5.38",
    "@types/lodash": "^4.14.40",
    "@types/mongodb": "^2.1.36",
    "@types/node": "^6.0.51",
    "@types/supertest": "^1.1.32",
    "install": "^0.8.2",
    "jasmine": "^2.5.2",
    "nodemon": "^1.11.0",
    "npm": "^4.0.2",
    "supertest": "^2.0.1",
    "typedoc": "^0.5.1",
    "typescript": "^2.0.10"
  },
  "dependencies": {
    "bson-ext": "^1.0.1",
    "co": "^4.6.0",
    "colors": "^1.1.2",
    "debug": "^2.6.1",
    "express": "^4.14.0",
    "lodash": "^4.17.2",
    "mongodb": "^2.2.16",
    "reflect-metadata": "^0.1.8"
  }
}
